= form_for(@bookshelf) do |f|
  - if @bookshelf.errors.any?
    #error_explanation
      %h2= pluralize(@bookshelf.errors.count, "error")
      prohibited this bookshelf from being saved:

      %ul
        - @bookshelf.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, :size => "50x5"

  .actions
    = f.submit
