= form_for :bookshelf, :url => assign_bookshelf_path(@location) do |f|
  = label 'available_bookshelf_id', "Available Bookshelves"
  = select_tag 'available_bookshelf_id', 
    options_from_collection_for_select(@bookshelves.select{ |b| b.available? }, 'id', 'name')
  = f.submit "Assign to location"

= label :location, "Assigned Bookshelves"
= select_tag 'assigned_bookshelves', 
  options_from_collection_for_select(@location.bookshelves, 'id', 'name')


%br

- if @location.map?
  = image_tag @location.map.url

